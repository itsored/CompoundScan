# CompoundScan Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/compoundscan
DB_HOST=localhost
DB_PORT=5432
DB_NAME=compoundscan
DB_USER=postgres
DB_PASSWORD=your_password

# Ethereum RPC - Sepolia Testnet
# Get your API key from Alchemy, Infura, or use public endpoints
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Alternative: https://sepolia.infura.io/v3/YOUR_PROJECT_ID
# Alternative: https://rpc.sepolia.org (public, rate limited)

# Indexer Configuration
INDEXER_START_BLOCK=0
INDEXER_BATCH_SIZE=1000
INDEXER_POLL_INTERVAL=12000

# Server
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=info

